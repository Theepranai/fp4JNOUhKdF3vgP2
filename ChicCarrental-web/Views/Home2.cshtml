                                            <div class="col-md-12">
                                                <label>Dropoff location :</label>
                                                <select class="form-control selectbox" name="dropoffloc">
                                                    @foreach (var x in Model.Branch)
                                                    {
                                                        <option value="@x.A_ID">@x.Branch_Name</option>
                                                    }
                                                </select>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Pickup date :</label>
                                        <input type="text" class="form-control" data-type="daterange" name="pickupdate" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly required>
                                    </div>
                                    <div class="col-md-1">
                                        <label>time :</label>
                                        <input type="text" class="form-control" data-type="timepicker" name="pickuptime" value="@DateTime.Now.ToString("hh:00 tt")" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Dropoff date :</label>
                                        <input type="text" class="form-control" data-type="daterange" name="dropoffdate" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" readonly required>
                                    </div>
                                    <div class="col-md-1">
                                        <label>time :</label>
                                        <input type="text" class="form-control" data-type="timepicker" name="dropofftime" value="@DateTime.Now.ToString("hh:00 tt")" required>
                                    </div>
                                    <div class="col-md-1">
                                        <label>&nbsp;</label>
                                        <button class="btn btn-default btn-block" type="submit">Go</button>
                                    </div>
                            </div>
                            <div class="row">
                                <p></p>
                            </div>
                        </div>
                    </form>
